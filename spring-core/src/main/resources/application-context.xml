<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="fileReader" class="hr.unizd.web.spring.FileReader">
        <constructor-arg name="fileName" value=""/>
    </bean>

    <bean id="memoryReader" class="hr.unizd.web.spring.MemoryReader" scope="prototype">
        <property name="memoryDataList">
            <list>
                <value>Ovo je iz memorije - xml 1</value>
                <value>Ovo je iz memorije - xml 2</value>
            </list>
        </property>
    </bean>

    <bean id="fileDataReaderClient" class="hr.unizd.web.spring.DataReaderClient">
        <property name="sourceOfData" value="datoteka" />
        <constructor-arg name="reader" ref="fileReader"/>
    </bean>

    <bean id="fileDataReaderClient2" class="hr.unizd.web.spring.DataReaderClient">
        <property name="sourceOfData" value="datoteka" />
        <constructor-arg name="reader" ref="fileReader"/>
    </bean>

    <bean id="memoryDataReaderClient" class="hr.unizd.web.spring.DataReaderClient">
        <property name="sourceOfData" value="memory" />
        <constructor-arg name="reader" ref="memoryReader"/>
    </bean>

    <bean id="memoryDataReaderClient2" class="hr.unizd.web.spring.DataReaderClient">
        <property name="sourceOfData" value="memory" />
        <constructor-arg name="reader" ref="memoryReader"/>
    </bean>

</beans>