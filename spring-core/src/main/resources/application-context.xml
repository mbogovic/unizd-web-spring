<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="fileReader" class="hr.unizd.web.spring.FileReader">
        <constructor-arg name="fileName" value=""/>
    </bean>

    <bean id="memoryReader" class="hr.unizd.web.spring.MemoryReader">
    </bean>

    <bean id="dataReaderClient" class="hr.unizd.web.spring.DataReaderClient">
        <constructor-arg name="reader" ref="fileReader"/>
    </bean>

</beans>